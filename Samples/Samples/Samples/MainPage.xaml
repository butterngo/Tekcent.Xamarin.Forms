<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Samples"
             xmlns:buttons="clr-namespace:Tekcent.Forms.Buttons;assembly=Tekcent.Forms.Buttons"
             x:Class="Samples.MainPage">

  <StackLayout BackgroundColor="Black">

    <buttons:ImageButton
     WidthRequest="100"
     HeightRequest="50"
     Text="Twitter"
     BackgroundColor="#01abdf"
     TextColor="#ffffff"
     Source="icon"
     Clicked="OnBtnClicked"/>

    <buttons:ImageButton
     WidthRequest="100"
     HeightRequest="50"
     Text="Facebook"
     BackgroundColor="White"
     TextColor="#ffffff"
     Source="Facebook_icon"
     Clicked="OnBtnClicked"
     IsFullImage="true"/>
    
  </StackLayout>

</ContentPage>