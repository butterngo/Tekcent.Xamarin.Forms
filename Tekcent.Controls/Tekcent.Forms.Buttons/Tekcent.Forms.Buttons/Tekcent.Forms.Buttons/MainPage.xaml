<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Tekcent.Forms.Buttons"
             xmlns:controls="clr-namespace:Tekcent.Forms.Buttons"
             x:Class="Tekcent.Forms.Buttons.MainPage">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <controls:ImageButton
      Grid.Row="0" Grid.Column="0"
      WidthRequest="100"
      HeightRequest="50"
      Text="Twitter"
      BackgroundColor="#01abdf"
      TextColor="#ffffff"
      Source="icon"
      Clicked="OnBtnClicked"
      BorderRadius="0"/>

    <controls:ImageButton
      Grid.Row="0" Grid.Column="1"
      Text="Twitter"
      BackgroundColor="#01abdf"
      TextColor="#ffffff"
      Source="icon"
      ImageHeightRequest="100"
      IsFullImage="true"/>
  </Grid>

</ContentPage>